{
    // Configure lua runtime.
    "Lua.runtime.version": "LuaJIT",
    "Lua.runtime.special" : {
        "include" : "require",
        "dofile" : "require"
    },
    "Lua.runtime.path":[
        "core/?.lua",
        "core/?/init.lua",
        "lib/?.lua",
        "lib/?/init.lua",
        "mods/?.lua",
        "mods/?/init.lua",
        "lua/?.lua",
        "lua/?/init.lua"
    ],

    // Make sure we only look at our main folders.
    "Lua.workspace.library": [
        "./core/meta",
        "./lib",
        "./mods",
        "./lua"
    ],
    "Lua.workspace.ignoreDir": [
        "*"
    ],

    // We are too powerful for default settings.
    "Lua.workspace.maxPreload": 10000,
    "Lua.workspace.preloadFileSize": 1000,

    // Ignore any potential 3rd party checks. We provide our definitions in core/meta
    "Lua.workspace.checkThirdParty": false,

    // Configure diagnostics.
    // "Lua.diagnostics.globals": [
    //     "event",
    //     "json",
    //     "math",
    //     "mge",
    //     "mwscript",
    //     "mwse",
    //     "string",
    //     "table",
    //     "tes3",
    //     "tes3ui",
    //     "timer"
    // ],
}
